      <a href="#contact" class="btn-outline">
        Get In Touch
      </a>
    </div>

    <!-- Social Links -->
    <div class="flex justify-center gap-6 mt-12 animate-fade-in-up" style="animation-delay: 0.6s;">
      <a href="https://github.com/bimakw" target="_blank" class="text-gray-400 hover:text-primary transition-colors" aria-label="GitHub">
