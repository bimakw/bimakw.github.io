  {
    title: 'Detective Benno',
    description: 'AI-powered code review assistant with multi-LLM support (OpenAI, Anthropic Claude). Analyzes GitHub PRs, provides actionable feedback, and integrates with GitHub API.',
    tags: ['Python', 'Anthropic Claude', 'OpenAI', 'GitHub API', 'LLM'],
    github: 'https://github.com/bimakw/detective-benno',
    image: 'https://socialify.git.ci/bimakw/detective-benno/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: true,
  },
  {
    title: 'Lexicon',
    description: 'Full-featured Blog/CMS with .NET 8 Clean Architecture backend and Next.js frontend. OWASP security hardened with input validation, XSS prevention, and SQL injection protection.',
    tags: ['.NET 8', 'Next.js', 'PostgreSQL', 'Clean Architecture', 'Docker'],
    github: 'https://github.com/bimakw/lexicon',
