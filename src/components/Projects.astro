---
const projects = [
  {
    title: 'GCP DevOps Infrastructure',
    description: 'Production-ready GCP infrastructure using Terraform with full DevOps pipeline. Includes GKE, Cloud SQL, Cloud Build, ArgoCD, Prometheus & Grafana.',
    tags: ['Terraform', 'GCP', 'Kubernetes', 'GitOps', 'ArgoCD'],
    github: 'https://github.com/bimakw/gcp-devops-iac',
    image: 'https://socialify.git.ci/bimakw/gcp-devops-iac/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: true,
  },
  {
    title: 'API Gateway',
    description: 'Lightweight API Gateway with rate limiting (token bucket), health checking, reverse proxy, and API key management. Built for microservices architecture.',
    tags: ['Go', 'Redis', 'Microservices', 'Rate Limiting'],
    github: 'https://github.com/bimakw/api-gateway',
    image: 'https://socialify.git.ci/bimakw/api-gateway/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: true,
  },
  {
    title: 'Service Presensi',
    description: 'Attendance management system with Clean Architecture. Features JWT authentication, RBAC, audit logging, and geofencing capabilities.',
    tags: ['Go', 'MongoDB', 'Clean Architecture', 'JWT'],
    github: 'https://github.com/bimakw/service-presensi',
    image: 'https://socialify.git.ci/bimakw/service-presensi/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: true,
  },
  {
    title: 'Auth Service',
    description: 'Authentication microservice with JWT, refresh tokens, password hashing, and role-based access control. Designed for multi-tenant applications.',
    tags: ['Go', 'PostgreSQL', 'JWT', 'RBAC'],
    github: 'https://github.com/bimakw/auth-service',
    image: 'https://socialify.git.ci/bimakw/auth-service/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: true,
  },
  {
    title: 'PMO - Project Management',
    description: 'Project Management Office application for tracking projects, tasks, and team performance metrics.',
    tags: ['Go', 'PostgreSQL', 'REST API'],
    github: 'https://github.com/bimakw/pmo',
    image: 'https://socialify.git.ci/bimakw/pmo/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: false,
  },
  {
    title: 'Warung Madura',
    description: 'E-commerce/POS system for small businesses. Inventory management, sales tracking, and reporting.',
    tags: ['Go', 'PostgreSQL', 'E-commerce'],
    github: 'https://github.com/bimakw/warung-madura',
    image: 'https://socialify.git.ci/bimakw/warung-madura/image?description=1&font=Inter&language=1&name=1&owner=1&pattern=Plus&theme=Dark',
    featured: false,
  },
];

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);
---

<section id="projects" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title text-center">Featured Projects</h2>
    <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
      Some of my recent work that I'm proud of
    </p>

    <!-- Featured Projects Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      {featuredProjects.map((project, index) => (
        <div class="card group hover:glow overflow-hidden p-0">
          <!-- Project Image -->
          <a href={project.github} target="_blank" class="block overflow-hidden">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </a>

          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-semibold text-white group-hover:text-primary transition-colors">
                {project.title}
              </h3>
              <div class="flex gap-3">
                <a href={project.github} target="_blank" class="text-gray-400 hover:text-primary transition-colors" aria-label="GitHub">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>
            </div>

            <p class="text-gray-400 text-sm mb-4 leading-relaxed">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tags.map((tag) => (
                <span class="text-xs font-mono text-primary/80 bg-primary/5 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Other Projects -->
    <h3 class="text-xl font-semibold text-white text-center mb-6">Other Projects</h3>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      {otherProjects.map((project) => (
        <a href={project.github} target="_blank" class="card p-4 hover:border-primary transition-colors group">
          <h4 class="font-semibold text-white group-hover:text-primary transition-colors mb-2">
            {project.title}
          </h4>
          <p class="text-gray-500 text-sm mb-3">{project.description}</p>
          <div class="flex flex-wrap gap-1">
            {project.tags.slice(0, 3).map((tag) => (
              <span class="text-xs text-gray-500">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>

    <!-- View More -->
    <div class="text-center mt-8">
      <a
        href="https://github.com/bimakw?tab=repositories"
        target="_blank"
        class="btn-outline inline-flex items-center gap-2"
      >
        View All Projects
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
