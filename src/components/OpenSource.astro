---
const contributions = [
  {
    project: 'Gitea',
    description: 'Self-hosted Git service written in Go. A painless, self-hosted Git service.',
    logo: 'https://avatars.githubusercontent.com/u/12724356?s=64',
    type: 'feature',
    contribution: 'Contributed features and improvements to the codebase',
    repo: 'https://github.com/go-gitea/gitea',
    stars: '45k+',
    language: 'Go',
  },
  {
    project: 'Trivy',
    description: 'Comprehensive and versatile security scanner for containers, filesystems, and git repositories.',
    logo: 'https://avatars.githubusercontent.com/u/71867744?s=64',
    type: 'feature',
    contribution: 'Added new security scanning capabilities',
    repo: 'https://github.com/aquasecurity/trivy',
    stars: '24k+',
    language: 'Go',
  },
  {
    project: 'TiFlow',
    description: 'Data integration platform for TiDB, supporting both data migration and change data capture.',
    logo: 'https://avatars.githubusercontent.com/u/11618696?s=64',
    type: 'feature',
    contribution: 'Enhanced data replication features',
    repo: 'https://github.com/pingcap/tiflow',
    stars: '420+',
    language: 'Go',
  },
  {
    project: 'Karpenter IBM Cloud',
    description: 'Kubernetes node provisioning project for IBM Cloud infrastructure.',
    logo: 'https://avatars.githubusercontent.com/u/8288123?s=64',
    type: 'feature',
    contribution: 'IBM Cloud provider implementation for Karpenter',
    repo: 'https://github.com/kubernetes-sigs/karpenter-provider-ibm-cloud',
    stars: '1+',
    language: 'Go',
  },
  {
    project: 'Apache Camel-K',
    description: 'Lightweight integration framework built from Apache Camel for Kubernetes.',
    logo: 'https://avatars.githubusercontent.com/u/47359?s=64',
    type: 'bugfix',
    contribution: 'Fixed integration and deployment issues',
    repo: 'https://github.com/apache/camel-k',
    stars: '870+',
    language: 'Go',
  },
  {
    project: 'ORAS',
    description: 'OCI Registry As Storage - Push and pull OCI artifacts to and from OCI registries.',
    logo: 'https://avatars.githubusercontent.com/u/102048908?s=64',
    type: 'docs',
    contribution: 'Improved documentation and examples',
    repo: 'https://github.com/oras-project/oras',
    stars: '1.5k+',
    language: 'Go',
  },
];

const typeColors = {
  feature: 'bg-green-500/10 text-green-400 border-green-500/20',
  bugfix: 'bg-red-500/10 text-red-400 border-red-500/20',
  docs: 'bg-blue-500/10 text-blue-400 border-blue-500/20',
};

const typeLabels = {
  feature: 'Feature',
  bugfix: 'Bug Fix',
  docs: 'Docs',
};
---

<section id="opensource" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title text-center">Open Source Contributions</h2>
    <p class="text-gray-400 dark:text-gray-400 text-center mb-12 max-w-2xl mx-auto">
      Contributing to the open source community and collaborating with developers worldwide
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {contributions.map((contrib) => (
        <a
          href={contrib.repo}
          target="_blank"
          rel="noopener noreferrer"
          class="card group hover:glow p-5"
        >
          <div class="flex items-start gap-4">
            <!-- Project Logo -->
            <img
              src={contrib.logo}
              alt={contrib.project}
              class="w-12 h-12 rounded-lg object-cover flex-shrink-0"
              loading="lazy"
            />

            <div class="flex-1 min-w-0">
              <!-- Project Name & Stars -->
              <div class="flex items-center justify-between mb-1">
                <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors truncate">
                  {contrib.project}
                </h3>
                <div class="flex items-center gap-1 text-gray-500 dark:text-gray-500 text-sm flex-shrink-0">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span>{contrib.stars}</span>
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">
                {contrib.description}
              </p>

              <!-- Tags -->
              <div class="flex items-center gap-2 flex-wrap">
                <span class={`text-xs px-2 py-0.5 rounded-full border ${typeColors[contrib.type]}`}>
                  {typeLabels[contrib.type]}
                </span>
                <span class="text-xs text-gray-500 dark:text-gray-500 font-mono">
                  {contrib.language}
                </span>
              </div>
            </div>
          </div>

          <!-- Contribution Info -->
          <div class="mt-4 pt-4 border-t border-gray-200 dark:border-dark-border">
            <p class="text-sm text-gray-600 dark:text-gray-400">
              <span class="text-primary font-medium">Contribution:</span> {contrib.contribution}
            </p>
          </div>

          <!-- External Link Icon -->
          <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a
        href="https://github.com/bimakw"
        target="_blank"
        class="btn-outline inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View All Contributions on GitHub
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card {
    position: relative;
  }
</style>
